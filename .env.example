# CVLab-Kit Environment Variables
# Copy this file to .env and fill in your values

# ===========================================
# Experiment Tracking
# ===========================================
# Weights & Biases API Key (optional)
# Get your key from https://wandb.ai/authorize
WANDB_API_KEY=

# ===========================================
# GPU Configuration
# ===========================================
# Comma-separated list of GPU device IDs to use
# Examples: "0", "0,1", "0,1,2,3"
CUDA_VISIBLE_DEVICES=0

# ===========================================
# Web Helper Configuration
# ===========================================
# Backend host (default: 0.0.0.0)
WEB_HELPER_HOST=0.0.0.0

# Backend port (default: 8000)
WEB_HELPER_PORT=8000

# ===========================================
# Distributed Execution (Optional)
# ===========================================
# Server URL for client mode
# Example: http://192.168.1.100:8000
SERVER_URL=

# Device name for client registration
DEVICE_NAME=

# ===========================================
# Development Settings
# ===========================================
# Enable debug mode (verbose logging)
DEBUG=false

# Enable frontend dev server (default: false)
DEV_MODE=false
